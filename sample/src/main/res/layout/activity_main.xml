<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/oppa.paperstyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oppa.paperstyle.sample.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <oppa.paperstyle.PaperButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/push_button" />
        <oppa.paperstyle.PaperButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/push_button"
            custom:pw_backgroundColor="#00000000"
            custom:pw_borderSize="0" />
        <oppa.paperstyle.PaperButton
            android:id="@+id/notification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/push_button"
            android:textColor="#FFFFFF"
            custom:pw_backgroundColor="#606060"
            custom:pw_focusColor="#808080"
            custom:pw_borderSize="0" />
        <oppa.paperstyle.PaperButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/push_button"
            android:textColor="#FFFFFF"
            custom:pw_backgroundColor="#2196F3"
            custom:pw_focusColor="#1976D2"
            custom:pw_borderSize="5" />
        <oppa.paperstyle.PaperButton
            android:id="@+id/random_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/random_background"
            custom:pw_borderSize="0" />
        <oppa.paperstyle.PaperSeekBar 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <oppa.paperstyle.PaperSeekBar
            android:id="@+id/hue_seekbar"
            android:max="360"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>